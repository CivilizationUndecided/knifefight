@namespace Facepunch.UI
@inherits Panel
@attribute [StyleSheet]

<root class="team flex row gap-sm align-center with-padding" style="@BuildStyle()">

    @if (IconPosition == IconPositions.Left)
    {
        <img class="hud with-padding icon" src="@TeamIcon" />
    }

    @foreach (var values in Grouping)
    {
        <PlayerAvatar @Player=@values />
    }

    @if (IconPosition == IconPositions.Right)
    {
        <img class="hud with-padding icon" src="@TeamIcon" />
    }
</root>

@code
{
    public enum IconPositions
    {
        Left,
        Right
    }

    public IGrouping<Team, PlayerController> Grouping { get; set; }
    public IconPositions IconPosition { get; set; } = IconPositions.Left;

    private string TeamColor => Grouping.Key.GetColor().Hex;
    private string TeamIcon => Grouping.Key.GetIconPath();

    protected override int BuildHash()
    {
        return HashCode.Combine(IconPosition, TeamColor, TeamIcon, Grouping);
    }

    private string BuildStyle()
    {
        var style = $"background: linear-gradient( to {IconPosition}, rgba( {TeamColor}, 0 ), rgba( {TeamColor}, 0.5 ) )";
        Log.Info(style);
        return style;
    }
}
