@namespace Facepunch.UI
@inherits Panel
@attribute [StyleSheet]

@if ( !Player.IsValid() ) return;

<root class="hud with-deadzone row top-left" style="margin-top: 300px">
    <InputHint Action="BuyMenu" class="small @(!Player.IsInBuyzone() ? "hidden" : "")" Size="@InputGlyphSize.Small" />
    <label class="important">$@Inventory.Balance.ToString("N0")</label>
</root>

@code
{
    /// <summary>
    /// The player's inventory
    /// </summary>
    public PlayerInventory Inventory => Player?.Inventory;

    /// The player
    public PlayerController Player => GameUtils.Viewer;

    protected override int BuildHash()
    {
        return HashCode.Combine( Inventory?.Balance, Player?.IsInBuyzone() );
    }   
}
