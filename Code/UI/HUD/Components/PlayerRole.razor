@using System.Text;
@namespace Facepunch.UI
@inherits Panel

@attribute [StyleSheet]

<root class="flex justify-center align-center row">
    <img class="hud with-padding" src="@TeamBanner" />
</root>

@code
{
    public Team Team => GameUtils.Viewer?.Team ?? Team.Unassigned;

    public PlayerController LocalPlayer => GameUtils.LocalPlayer;

    protected override int BuildHash()
    {
        return HashCode.Combine( Team, LocalPlayer?.IsSpectating );
    }

    private string TeamBanner => Team.GetBannerPath();
}
