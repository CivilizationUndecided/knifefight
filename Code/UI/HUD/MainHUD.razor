@namespace Facepunch.UI
@inherits PanelComponent

@implements IKillListener

<root>
    <canvas>
        <BuyMenu />
        <Crosshair />
        <WeaponInfoComponent />
        <Scoreboard />

        <PlayerInfo />
        <Balance />

        <MarkerSystem />
        <RoundStateDisplay />
        <DamageIndicator />
        <KillFeed @ref="KillFeed" />
    </canvas>
</root>

@code 
{
    public KillFeed KillFeed { get; set; }


    public void OnPlayerKilled( Component killer, Component victim, float damage, Vector3 position, Vector3 force, Component inflictor = null )
    {
        KillFeed.OnPlayerKilled( killer, victim, inflictor );
    }
}