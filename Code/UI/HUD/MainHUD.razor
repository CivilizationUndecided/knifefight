@namespace Facepunch.UI
@inherits PanelComponent

@implements IKillListener

<root>
    <canvas>
        <Crosshair />
        <WeaponInfoComponent />
        <Minimap />

        <Toast />
        <EquipmentOverlay />
        <PlayerInfo />
        <Balance />
        <Spectating />

        <RoundStateDisplay />
        <DefuseKitDisplay />
        <DamageIndicator />
        <KillFeed @ref="KillFeed" />

        <Radio />
    </canvas>
    
    <!-- Full-screen overlays -->
    <BuyMenu />
    <MarkerSystem />
    <Scoreboard />
</root>

@code 
{
    public KillFeed KillFeed { get; set; }


    public void OnPlayerKilled( Component killer, Component victim, float damage, Vector3 position, Vector3 force, Component inflictor = null, bool isHeadshot = false )
    {
        KillFeed.OnPlayerKilled( killer, victim, inflictor, isHeadshot );
    }
}